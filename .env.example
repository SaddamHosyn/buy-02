# ===========================================
# MongoDB Atlas Connection
# ===========================================
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# Order Service Database
SPRING_DATA_MONGODB_URI_ORDER=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@buy02-cluster.s0i27el.mongodb.net/orderdb?retryWrites=true&w=majority

# User Service Database
SPRING_DATA_MONGODB_URI_USER=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@buy02-cluster.s0i27el.mongodb.net/userdb?retryWrites=true&w=majority

# Product Service Database
SPRING_DATA_MONGODB_URI_PRODUCT=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@buy02-cluster.s0i27el.mongodb.net/productdb?retryWrites=true&w=majority

# Media Service Database
SPRING_DATA_MONGODB_URI_MEDIA=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@buy02-cluster.s0i27el.mongodb.net/mediadb?retryWrites=true&w=majority

